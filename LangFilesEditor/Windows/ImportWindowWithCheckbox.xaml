<Window x:Class="LangFilesEditor.Windows.ImportWindowWithCheckbox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Import"
        Width="800"
        Height="800"
        MinWidth="300"
        MinHeight="300"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Name="TbNote"
                   Grid.Row="0"
                   Margin="5"
                   TextWrapping="Wrap" />

        <TextBox Name="TbText"
                 Grid.Row="1"
                 Margin="5"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 AcceptsReturn="True"
                 TextChanged="TbText_OnTextChanged"
                 TextWrapping="Wrap" />

        <CheckBox Grid.Row="2" 
                  Name="CbAutoNumbering"
                  Content="Автоматически нумеровать теги"/>

        <CheckBox Grid.Row="3" 
                  Name="CbReplaceExisting"
                  Content="Заменить при совпадении тегов"/>

        <StackPanel Grid.Row="4"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <Button Name="BtAccept"
                    Click="Accept_OnClick"
                    Content="Accept"
                    IsEnabled="False" 
                    Padding="8 4"
                    Margin="4"/>
            <Button Name="BtCancel"
                    Click="BtCancel_OnClick"
                    Content="Cancel"
                    Padding="8 4"
                    Margin="4"/>
        </StackPanel>
    </Grid>
</Window>
